                                                            <xf:insert ev:event="DOMActivate" ref="instance('i-rec')//tei:place/child::*" at="last()" position="after" origin="instance('i-new-bibl')//tei:bibl[1]"/>
                                                            <xf:setvalue ref="instance('i-new-bibl')//tei:bibl[1]" value="''"/>
                                                        </xf:action>
                                                    </xf:trigger>
